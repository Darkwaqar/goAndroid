<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_adapter_attribute"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="8dp">

    <View
        android:id="@+id/attribute_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimary" />

    <RadioButton
        android:id="@+id/detail_parent_product_attr_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:button="@drawable/checkout_checkbox_selector"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:ellipsize="marquee"
        android:paddingStart="10dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.growonline.gomobishop.control.FontTextView
            android:id="@+id/attribute_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:fontType="5" />

        <TextView
            android:id="@+id/detail_parent_product_attr_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>